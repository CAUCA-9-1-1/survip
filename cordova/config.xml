<?xml version='1.0' encoding='utf-8'?>
<widget id="ca.cauca.survi.prevention" version="0.1.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>SURVIPrevention</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cauca.ca" href="http://www.cauca.ca">
        CAUSE
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon density="ldpi" src="res/icon/android/36x36.png" />
        <icon density="mdpi" src="res/icon/android/48x48.png" />
        <icon density="hdpi" src="res/icon/android/72x72.png" />
        <icon density="xhdpi" src="res/icon/android/96x96.png" />
        <icon density="xxhdpi" src="res/icon/android/144x144.png" />
        <icon density="xxxhdpi" src="res/icon/android/192x192.png" />
        <splash density="port-ldpi" src="res/screen/android/200x320.png" />
        <splash density="land-ldpi" src="res/screen/android/320x200.png" />
        <splash density="port-mdpi" src="res/screen/android/320x480.png" />
        <splash density="land-mdpi" src="res/screen/android/480x320.png" />
        <splash density="port-hdpi" src="res/screen/android/480x800.png" />
        <splash density="land-hdpi" src="res/screen/android/800x480.png" />
        <splash density="port-xhdpi" src="res/screen/android/720x1280.png" />
        <splash density="land-xhdpi" src="res/screen/android/1280x720.png" />
        <splash density="port-xxhdpi" src="res/screen/android/960x1600.png" />
        <splash density="land-xxhdpi" src="res/screen/android/1600x960.png" />
        <splash density="port-xxxhdpi" src="res/screen/android/1280x1920.png" />
        <splash density="land-xxxhdpi" src="res/screen/android/1920x1280.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <icon height="29" src="res/icon/ios/29x29.png" width="29" />
        <icon height="48" src="res/icon/ios/48x48.png" width="48" />
        <icon height="57" src="res/icon/ios/57x57.png" width="57" />
        <icon height="58" src="res/icon/ios/58x58.png" width="58" />
        <icon height="72" src="res/icon/ios/72x72.png" width="72" />
        <icon height="96" src="res/icon/ios/96x96.png" width="96" />
        <icon height="114" src="res/icon/ios/114x114.png" width="114" />
        <icon height="144" src="res/icon/ios/144x144.png" width="144" />
        <splash height="1024" src="res/screen/ios/768x1024.png" width="768" />
        <splash height="768" src="res/screen/ios/1024x768.png" width="1024" />
        <splash height="2048" src="res/screen/ios/1536x2048.png" width="1536" />
        <splash height="1536" src="res/screen/ios/2048x1536.png" width="2048" />
        <splash height="480" src="res/screen/ios/320x480.png" width="320" />
        <splash height="320" src="res/screen/ios/480x320.png" width="480" />
        <splash height="960" src="res/screen/ios/640x960.png" width="640" />
        <splash height="640" src="res/screen/ios/960x640.png" width="960" />
        <splash height="1136" src="res/screen/ios/640x1136.png" width="640" />
        <splash height="640" src="res/screen/ios/1136x640.png" width="1136" />
        <splash height="1334" src="res/screen/ios/750x1334.png" width="750" />
        <splash height="750" src="res/screen/ios/1334x750.png" width="1334" />
        <splash height="2208" src="res/screen/ios/1242x2208.png" width="1242" />
        <splash height="1242" src="res/screen/ios/2208x1242.png" width="2208" />
    </platform>
    <platform name="browser">
        <splash src="res/screen/universal.png" />
    </platform>
    <icon src="res/icon/default.png" />
    <hook src="scripts/prepareAngularApp.js" type="before_prepare" />
    <preference name="android-minSdkVersion" value="21" />
    <preference name="deployment-target" value="8.0" />
    <preference name="orientation" value="portrait" />
    <preference name="StatusBarOverlaysWebView" value="false" />
    <preference name="StatusBarBackgroundColor" value="#f5f5f5" />
    <preference name="StatusBarStyle" value="default" />
    <preference name="SplashShowOnlyFirstTime" value="false" />
    <preference name="ShowSplashScreenSpinner" value="false" />
    <engine name="android" spec="^6.2.3" />
    <engine name="browser" spec="~4.1.0" />
    <engine name="ios" spec="^4.4.0" />
    <plugin name="cordova-plugin-camera" spec="^2.4.1" />
    <plugin name="cordova-plugin-device" spec="^1.1.6" />
    <plugin name="cordova-plugin-splashscreen" spec="~4.0.0" />
    <plugin name="cordova-plugin-statusbar" spec="~2.2.2" />
    <plugin name="cordova-plugin-whitelist" spec="~1.3" />
</widget>

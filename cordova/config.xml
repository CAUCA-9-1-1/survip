<?xml version='1.0' encoding='utf-8'?>
<widget id="ca.cauca.surviprevention" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>SURVIPrevention</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cauca.ca" href="http://www.cauca.ca">
        CAUSE
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon density="hdpi" src="res/icon/android/36x36.png" />
        <icon density="ldpi" src="res/icon/android/48x48.png" />
        <icon density="mdpi" src="res/icon/android/72x72.png" />
        <icon density="xhdpi" src="res/icon/android/96x96.png" />
        <splash density="land-hdpi" src="res/screen/android/320x200.png" />
        <splash density="land-ldpi" src="res/screen/android/480x320.png" />
        <splash density="land-mdpi" src="res/screen/android/800x480.png" />
        <splash density="land-xhdpi" src="res/screen/android/1280x720.png" />
        <splash density="port-hdpi" src="res/screen/android/200x320.png" />
        <splash density="port-ldpi" src="res/screen/android/320x480.png" />
        <splash density="port-mdpi" src="res/screen/android/480x800.png" />
        <splash density="port-xhdpi" src="res/screen/android/720x1280.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <icon height="29" src="res/icon/ios/29x29.png" width="29" />
        <icon height="40" src="res/icon/ios/40x40.png" width="40" />
        <icon height="50" src="res/icon/ios/50x50.png" width="50" />
        <icon height="57" src="res/icon/ios/57x57.png" width="57" />
        <icon height="58" src="res/icon/ios/58x58.png" width="58" />
        <icon height="60" src="res/icon/ios/60x60.png" width="60" />
        <icon height="72" src="res/icon/ios/72x72.png" width="72" />
        <icon height="76" src="res/icon/ios/76x76.png" width="76" />
        <icon height="80" src="res/icon/ios/80x80.png" width="80" />
        <icon height="100" src="res/icon/ios/100x100.png" width="100" />
        <icon height="114" src="res/icon/ios/114x114.png" width="114" />
        <icon height="120" src="res/icon/ios/120x120.png" width="120" />
        <icon height="144" src="res/icon/ios/144x144.png" width="144" />
        <icon height="152" src="res/icon/ios/152x152.png" width="152" />
        <icon height="167" src="res/icon/ios/167x167.png" width="167" />
        <icon height="180" src="res/icon/ios/180x180.png" width="180" />
        <splash height="480" src="res/screen/ios/320x480.png" width="320" />
        <splash height="960" src="res/screen/ios/640x960.png" width="640" />
        <splash height="1136" src="res/screen/ios/640x1136.png" width="640" />
        <splash height="1334" src="res/screen/ios/750x1334.png" width="750" />
        <splash height="1024" src="res/screen/ios/768x1024.png" width="768" />
        <splash height="768" src="res/screen/ios/1024x768.png" width="1024" />
        <splash height="2208" src="res/screen/ios/1242x2208.png" width="1242" />
        <splash height="2048" src="res/screen/ios/1536x2048.png" width="1536" />
        <splash height="1536" src="res/screen/ios/2048x1536.png" width="2048" />
        <splash height="1242" src="res/screen/ios/2208x1242.png" width="2208" />
    </platform>
    <platform name="browser">
        <icon src="res/icon/default.png" />
        <splash src="res/screen/universal.png" />
    </platform>
    <hook src="scripts/prepareAngularApp.js" type="before_prepare" />
    <preference name="StatusBarOverlaysWebView" value="false" />
    <preference name="StatusBarBackgroundColor" value="#f5f5f5" />
    <preference name="StatusBarStyle" value="default" />
    <preference name="SplashShowOnlyFirstTime" value="false" />
    <preference name="ShowSplashScreenSpinner" value="false" />
    <preference name="orientation" value="portrait" />
    <engine name="browser" spec="~4.1.0" />
    <plugin name="cordova-plugin-camera" spec="~2.4.0" />
    <plugin name="cordova-plugin-splashscreen" spec="~4.0.0" />
    <plugin name="cordova-plugin-statusbar" spec="~2.2.2" />
    <plugin name="cordova-plugin-whitelist" spec="~1.3" />
</widget>

:host {
  position: fixed;
  width: 100%;
  height: 100%;
  overflow: hidden;
}

.main {
  height: calc(100% - 64px);
  overflow: auto;
}

@media only screen and (max-width: 600px) {
  md-toolbar {
    bottom: 0;
    z-index: 10;
    position: fixed;
  }

  .main {
    height: calc(100% - 56px);
  }
}